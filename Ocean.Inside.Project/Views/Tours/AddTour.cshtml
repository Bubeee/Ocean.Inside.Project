@model Ocean.Inside.Project.ViewModels.TourViewModel

<h2 class="offset-top-25">Добавить тур</h2>

<div class="box bg-white offset-top-25" style="min-width: 45%">
    <form method="post" action="@Url.Action("AddTour")" class="rd-mailform">
        @Html.AntiForgeryToken()

        <div class="form-group form-group-xs">
            <label for="Title" class="form-label">Заголовок</label>
            <input name="Title" id="Title" class="form-control" type="text" />
        </div>

        <div class="form-group form-group-xs">
            <label for="Hotel" class="form-label">Отель</label>
            <input name="Hotel" id="Hotel" class="form-control" type="text" />
        </div>

        <div class="form-group form-group-xs">
            <label for="DepartFrom" class="form-label">Вылет из</label>
            <input name="DepartFrom" id="DepartFrom" class="form-control" type="text" />
        </div>

        <div class="form-group form-group-xs">
            <label for="Location" class="form-label">Город пребывания</label>
            <input name="Location" id="Location" class="form-control" type="text" />
        </div>

        <div class="form-group form-group-xs">
            <label for="StartDate" class="form-label">Дата</label>
            <input name="StartDate" id="StartDate" class="form-control dtp-buttons" type="date" />
        </div>

        <div class="form-group form-group-xs">
            <label for="DurationDays" class="form-label">Количество дней</label>
            <input name="DurationDays" id="DurationDays" class="form-control" type="text" />
        </div>
        <div class="form-group form-group-xs">
            <label for="Price" class="form-label">Цена</label>
            <input name="Price" id="Price" class="form-control" type="text" />
        </div>
        <div class="form-group form-group-xs">
            @*<label for="CurrencyCode" class="form-label">Валюта</label>*@
            @Html.EnumDropDownListFor(model => model.CurrencyCode, null, new {@class = "form-control" });
            @*<input name="CurrencyCode" id="CurrencyCode" class="form-control" type="" />*@
        </div>

        <div class="form-group form-group-xs">
            <label for="ImageRaw" class="text-center">Главное фото</label>
            <input name="ImageRaw" id="ImageRaw" type="file" class="btn btn-gray" value="Выбрать фото" style="width: 100%"/>
        </div>

        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-success" />
        </div>
    </form>
</div>