@using Ocean.Inside.Project.Utils
@model Ocean.Inside.Project.ViewModels.TourViewModel

<main class="page-content">
    <section class="section-34 section-md-bottom-45 bg-alabaster">
        <div class="shell">
            <div class="range range-xs-center">
                <div class="cell-xs-10 cell-sm-8 cell-md-12">
                    <div class="range range-xs-center list-inline-dashed-vertival">
                        <div class="cell-xs-6 cell-sm-5 cell-md-3">
                            <div>
                                <p class="text-extra-small text-silver-chalice text-italic text-uppercase text-spacing-200">ДАТЫ</p>
                            </div>
                            <div class="offset-top-0">
                                <p class="text-big text-ubold text-gray-base text-uppercase">@($"{Model.StartDate:M} - {Model.StartDate.AddDays(Model.DurationDays):M}")</p>
                            </div>
                        </div>
                        <div class="cell-xs-6 cell-sm-5 cell-md-3 offset-top-40 offset-xs-top-0">
                            <div>
                                <p class="text-extra-small text-silver-chalice text-italic text-uppercase text-spacing-200">ДЛИТЕЛЬНОСТЬ</p>
                            </div>
                            <div class="offset-top-0">
                                <p class="text-big text-ubold text-gray-base text-uppercase">@Model.DurationDays дней</p>
                            </div>
                        </div>
                        <div class="cell-xs-6 cell-sm-5 cell-md-3 offset-top-40 offset-md-top-0">
                            <div>
                                <p class="text-extra-small text-silver-chalice text-italic text-uppercase text-spacing-200">ЦЕНА</p>
                            </div>
                            <div class="offset-top-0">
                                <p class="text-big text-ubold text-gray-base text-uppercase">@($"{Model.CurrencySymbol.CurrencyCodeToSymbol()}{Model.Price}")</p>
                            </div>
                        </div>
                        <div class="cell-xs-6 cell-sm-5 cell-md-3 offset-top-40 offset-md-top-0">
                            <div>
                                <p class="text-extra-small text-silver-chalice text-italic text-uppercase text-spacing-200">ОТЕЛЬ</p>
                            </div>
                            <div class="offset-top-0">
                                <p class="text-big text-ubold text-gray-base text-uppercase">@Model.Hotel</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section-70 section-md-bottom-80">
        <div class="shell">
            <div>
                <h3>Описание тура</h3>
            </div>
            <div class="offset-top-40 text-left">

                <div data-items="1" data-sm-items="2" data-md-items="3" data-stage-padding="5" data-loop="false" data-margin="30" data-mouse-drag="false" data-dots="true" data-nav="true" class="owl-carousel owl-dots-primary owl-dots-lg-reveal owl-navs-lg-veil">
                    <div class="owl-item">

                        <div class="unit unit-horizontal unit-spacing-sm">
                            <div class="unit-left text-center">
                                <div>
                                    <h3 class="text-ubold text-primary line-height-1">1-3</h3>
                                </div>
                                <div class="offset-top-8 inset-left-10">
                                    <p class="text-extra-small text-spacing-1000 text-gray-base text-uppercase line-height-1">day</p>
                                </div>
                            </div>
                            <div class="unit-body offset-top-8">
                                <p class="text-small text-ubold text-uppercase text-gray-base">Berlin, Warsaw, krakow</p>
                            </div>
                        </div>
                        <div class="offset-top-12 inset-left-10 inset-right-10">
                            <div>
                                <hr class="hr bg-gallery">
                            </div>
                            <div class="offset-top-20">
                                <p class="text-small text-silver-chalice">Start your Eastern Europe trip from Berlin - one of the most attractive European cities. Head out to Warsaw - the capital of Poland, where you’ll be able to take a guided tour through the city’s places of interests and museums.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
