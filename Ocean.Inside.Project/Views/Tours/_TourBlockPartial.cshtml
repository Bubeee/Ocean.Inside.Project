@using Ocean.Inside.Project.Utils
@model Ocean.Inside.Project.ViewModels.TourViewModel

<div class="cell-sm-6 cell-md-4 offset-top-30">
    <div class="box-offer box-offer-xs">
        <div class="box-offer-img-wrap">
            <a href="@Url.Action("Tour", "Tours", new { Model.Id })">
                <img src="@Model.ImageUrl" width="270" height="240" alt="" class="img-responsive center-block">
            </a>
        </div>
        <div class="box-offer-caption text-left">
            <div class="pull-left">
                <div class="box-offer-title text-ubold">
                    @Html.ActionLink(Model.Title, "Tour", "Tours", new { Model.Id }, new { @class = "text-gray-base" })
                </div>
            </div>
            <div class="pull-right">
                <div class="box-offer-price text-gray-base">@($"{Model.CurrencySymbol.CurrencyCodeToSymbol()}{Model.Price}")</div>
            </div>
            <div class="clearfix"></div>
            <div class="offset-top-8 offset-xs-top-4">
                <ul class="list-inline list-inline-13 list-inline-marked list-inline-marked-offset-inverse-top text-silver-chalice text-extra-small">
                    <li>@Model.Location</li>
                    <li>@Model.DurationDays дней /@Model.DurationNights ночей</li>
                    <li>Вылет: @Model.DepartFrom</li>
                </ul>
            </div>
        </div>
    </div>
</div>
