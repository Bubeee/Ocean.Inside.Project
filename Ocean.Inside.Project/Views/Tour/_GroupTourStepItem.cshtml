@model Ocean.Inside.Project.Models.TourStepViewModel

<div class="owl-item">
    <div class="unit unit-horizontal unit-spacing-sm">
        <div class="unit-left text-center">
            @{
                if (Model.Duration > 1)
                {
                    <div>
                        <h3 class="text-ubold text-primary line-height-1">
                            @($"{Model.Day} - {Model.Day + Model.Duration - 1}")
                        </h3>
                    </div>
                    <div class="offset-top-8 inset-left-10">
                        <p class="text-extra-small text-spacing-1000 text-gray-base text-uppercase line-height-1">дни</p>
                    </div>
                }
                else
                {
                    <div>
                        <h3 class="text-ubold text-primary line-height-1">
                            @($"{Model.Day}")
                        </h3>
                    </div>
                    <div class="offset-top-8 inset-left-10">
                        <p class="text-extra-small text-spacing-1000 text-gray-base text-uppercase line-height-1">день</p>
                    </div>
                }
            }
        </div>
        <div class="unit-body offset-top-8">
            <p class="text-small text-ubold text-uppercase text-gray-base">@Model.Title</p>
            <a class="glyphicon glyphicon-edit" href="@Url.Action("EditStep", "Tour", new { id = Model.Id })" alt="Редактировать шаги" title="Редактировать"></a>
            <a class="glyphicon glyphicon-remove" href="@Url.Action("RemoveStep", "Tour", new { id = Model.Id })" alt="Удалить шаг" title="Удалить"></a>
        </div>
    </div>
    <div class="offset-top-12 inset-left-10 inset-right-10">
        <div>
            <hr class="hr bg-gallery">
        </div>
        <div class="offset-top-20">
            <p class="text-small text-silver-chalice">@Model.Description</p>
        </div>
    </div>
</div>