@model Ocean.Inside.Project.Models.CheckInViewModel

<main class="page-content">
    <h2>Добавить дату заезда</h2>
    <section class="section-45">
        <div class="box bg-white" style="min-width: 45%">
            <form method="post" action="@Url.Action("AddCheckIn")" class="text-center">
                <div class="form-group form-group-xs">
                    <label for="Date" class="form-label">Дата</label>
                    <input name="Date" id="Date" class="form-control" type="date" value="@Model.Date.ToString("yyyy-MM-dd")" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-success" />
                    <input type="hidden" value="@Model.TourId" id="TourId" name="TourId" />
                </div>
            </form>
        </div>
    </section>
</main>